<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_partner_form">
            <field name="name">res.partner.view.form.inherit.partner.mail.history</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="500"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_received_email_history" icon="fa-envelope-o" attrs="{'invisible': [('messages_count', '=', 0)]}">
                        <field name="messages_count" string="History" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>
