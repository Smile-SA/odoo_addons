<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">

    <record id="view_partner_type_search" model="ir.ui.view">
      <field name="name">res.partner.type.search</field>
      <field name="model">res.partner.type</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
        </search>
      </field>
    </record>

    <record id="view_partner_type_tree" model="ir.ui.view">
      <field name="name">res.partner.type.list</field>
      <field name="model">res.partner.type</field>
      <field name="arch" type="xml">
        <tree>
          <field name="sequence" widget="handle"/>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_partner_type_form" model="ir.ui.view">
      <field name="name">res.partner.type.form</field>
      <field name="model">res.partner.type</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
              </button>
            </div>
            <div class="oe_title">
              <h1>
                <field name="name" default_focus="1" placeholder="Name"/>
              </h1>
              <group>
                <field name="code" placeholder="Code" attrs="{'readonly': [('id', '!=', False)]}"/>
                <field name="id" invisible="True"/>
              </group>
            </div>
            <notebook>
              <page string="Characteristics">
                <group>
                  <group>
                    <field name="company_type"/>
                    <field name="type" attrs="{'invisible': [('company_type', '!=', 'person')], 'required': [('company_type', '=', 'person')]}"/>
                    <field name="customer" attrs="{'invisible': [('company_type', '!=', 'company')]}"/>
                    <field name="supplier" attrs="{'invisible': [('company_type', '!=', 'company')]}"/>
                    <field name="subcompanies_label" attrs="{'invisible': [('company_type', '!=', 'company')]}" />
                  </group>
                  <group>
                    <field name="can_have_parent" attrs="{'invisible': [('company_type', '!=', 'company')]}"/>
                    <field name="parent_is_required" attrs="{'invisible': ['|', ('can_have_parent', '=', False), ('company_type', '!=', 'company')]}"/>
                    <field name="parent_type_ids" widget="many2many_tags"
                      domain="[('id', '!=', id), ('company_type', '=', 'company')]"
                      attrs="{'invisible': [('can_have_parent', '=', False)]}"/>
                    <field name="parent_relation_label" attrs="{'invisible': [('company_type', '!=', 'company')]}" />
                  </group>
                  <group colspan="4">
                    <field name="partner_display_name"/>
                  </group>
                </group>
              </page>
              <page string="Fields to update in sub-companies"
                  attrs="{'invisible': [('company_type', '!=', 'company')]}">
                <field name="field_ids">
                  <tree>
                    <field name="name" groups="base.group_no_one"/>
                    <field name="field_description"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_partner_types" model="ir.actions.act_window">
      <field name="name">Contact Types</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">res.partner.type</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_partner_types" parent="contacts.res_partner_menu_config" sequence="2" action="action_partner_types"/>

  </data>
</odoo>
