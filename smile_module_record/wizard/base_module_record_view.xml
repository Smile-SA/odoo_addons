<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data noupdate="0">

    <!-- Base Module Record -->

    <record id="view_base_module_record_form" model="ir.ui.view">
      <field name="name">base.module.record.form</field>
      <field name="model">base.module.record</field>
      <field name="arch" type="xml">
        <form string="Export Customizations as a Module" version="7.0">
          <sheet>
            <group colspan="4" col="4" states="draft">
              <separator string="Options" colspan="4"/>
              <field name="date_filter" string="Records"/>
              <field name="start_date" string="from"/>
              <field name="filetype"/>
              <group colspan="4" col="1" expand="0">
                <label string="Keep empty to use all models"/>
                <field name="model_ids" nolabel="1"/>
              </group>
            </group>
            <group colspan="4" col="2" states="done">
              <separator string="File" colspan="2"/>
              <field name="file" nolabel="1" filename="filename" colspan="4"/>
              <field name="filename" invisible="1"/>
            </group>
            <field name="state" invisible="1"/>
          </sheet>
          <footer states="draft">
            <button name="button_create_module" type='object' string="Create Module" class="oe_highlight"/>
            or
            <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
          <footer states="done">
            <button string="Close" special="cancel"/>
            or
            <button name="button_set_to_draft" type='object' string="Go back" class="oe_link"/>
          </footer>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_base_module_record">
      <field name="name">Export Data as a Module</field>
      <field name="res_model">base.module.record</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="view_id" ref="view_base_module_record_form"/>
    </record>

    <menuitem id="menu_base_module_record" parent="base.menu_management" action="action_base_module_record" sequence="90"/>

  </data>
</openerp>
